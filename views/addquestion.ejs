  </head>

  <body>

    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>  
    <!-- ***** Preloader End ***** -->

    
    <%- include('./partials/nav.ejs') %>
    

    <!-- Page Content -->
    <div class="page-heading header-text">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1>Add a Question</h1>
            <span>feel free to add a Question now!</span>
          </div>
        </div>
      </div>
    </div>

  

    <div class="callback-form contact-us">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="section-heading">
              <h2>Please fill this <em>Form</em></h2>
            </div>
          </div>
          <div class="col-md-12">
            <div class="contact-form">
              <form id="contact" action="/addquestion" method="POST">
                <div class="row">
                  <div class="col-lg-4 col-md-12 col-sm-12">
                    <fieldset>
                      <input name="name" type="text" class="form-control" id="name" placeholder="Name of Question" required="">
                    </fieldset>
                  </div>
                  
                  <div class="col-lg-4 col-md-12 col-sm-12">
                    <fieldset>
                      <input name="linkTo" type="text" class="form-control" id="linkTo" placeholder="Link" required="">
                    </fieldset>
                  </div>


<p></p>
<div class="col-lg-4 col-md-12 col-sm-12">
                        <select appearance="none" id="topic" name="topic" required>
                  <% if(topics.length>0){ topics.forEach(topic=>{ %>
                    <option value="<%=topic._id%>"><%=topic.name%></option>
                  <%});} %>
              </select>
            </div>
<div></div>

                  <div class="col-lg-12">
                    <fieldset>
                      <button type="submit" id="form-submit" class="filled-button" href="/topic">Submit</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

   

    

    <%- include('./partials/footer.ejs') %>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="assets/js/custom.js"></script>
    <script src="assets/js/owl.js"></script>
    <script src="assets/js/slick.js"></script>
    <script src="assets/js/accordions.js"></script>

    <script language = "text/Javascript"> 
      cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
      function clearField(t){                   //declaring the array outside of the
      if(! cleared[t.id]){                      // function makes it static and global
          cleared[t.id] = 1;  // you could use true and false, but that's more typing
          t.value='';         // with more chance of typos
          t.style.color='#fff';
          }
      }
    </script>

  </body>
</html>